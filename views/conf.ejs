<body>
    <%- include('./include/navbar') %>

    <section class="middle">

        <!-- MENU DE ETAPAS -->
        <nav class="col-sm-12 y-9 d-flex justify-content-center">
            <ul class="nav nav-tabs col-sm-6">
                 <li class="nav-item">
                     <a class="nav-link active" aria-current="page" href="#">ETAPA 1</a>
                 </li>
                 <li class="nav-item"><p>ETAPA 2</p></li>
                 <li class="nav-item"><p>ETAPA 3</p></li>
                 <li class="nav-item"><p>RESULTADO</p></li>
             </ul>
         </nav>

        <!-- TITULO -->
        <h2 id="title_h2">ETAPA 1: Programas O e P, Variáveis e Caso de Teste</h2>
        <hr id="line" />

        <!-- PARTE CENTRAL -->
        <section class="container">
            <form action="/testcase" method="post">
                <!-- TEXTAREAS DOS PROGRAMAS O E P -->
                <section class="row py-3">

                    <!-- PROGRAMA O -->
                    <div class="form-group col-sm-6">
                        <label for="message">Programa O</label>
                        <textarea class="form-control my-2" id="message" rows="10" name="prog_o" placeholder="Inserir código"><%= (program.PROG_O)? program.PROG_O : null%></textarea>
                    </div>

                    <!-- PROGRAMA P -->
                    <div class="form-group col-sm-6">
                        <label for="message">Programa P</label>
                        <textarea class="form-control my-2" id="message" name="prog_p" rows="10" placeholder="Inserir código"><%= (program.PROG_P)? program.PROG_P : null%></textarea>
                    </div>
                </section>

                <!-- VARIÁVEIS DOS PROGRAMAS -->
                <section class="row py-3">

                    <!-- VARIÁVEIS DO PROG O -->
                    <div class="form-group col-sm-6">
                        <label for="message">Variáveis do programa O</label>
                        <input type="text" class="form-control my-2" name="vars_prog_o" id="message" placeholder="var1; var2; varN"
                            value="<%= (program.VARS_PROG_O)? program.VARS_PROG_O : null%>" />
                        <div id="emailHelp" class="form-text">Se array, adicione colchetes após seu nome. Ex: list[]</div>
                    </div>

                    <!-- VARIÁVEIS DO PROG P-->
                    <div class="form-group col-sm-6">
                        <label for="message">Variáveis do programa P</label>
                        <input type="text" class="form-control my-2" name="vars_prog_p" id="message" placeholder="ar1; var2; varN"
                            value="<%= (program.VARS_PROG_P)? program.VARS_PROG_P : null%>" />
                        <div id="emailHelp" class="form-text">Se array, adicione colchetes após seu nome. Ex: list[]</div>
                    </div>
                </section>

                <!-- SUBCAMINHO DOS PROGRAMAS -->
                <section class="row py-3">
                    <!-- PROGRAMA O -->
                    <div class="form-group col-sm-6">
                        <label for="message" class="mt-3">SubCaminho de teste do Programa O</label>
                        <div class="row">
                            <input type="text" class="form-control m-2 col" id="exampleFormControlInput1"
                            placeholder="1, 2, 3, 4, 8, 9" name="subcaminho_o" value="<%= (program.SUBCAMINHO_O)? program.SUBCAMINHO_O : null%>">
                            <input type="text" class="form-control m-2 col" id="exampleFormControlInput1"
                                placeholder="(n, (m, k), bool, var)" name="subcaminho_o_not"  value="<%= (program.SUBCAMINHO_O_NOT)? program.SUBCAMINHO_O_NOT : null%>">
                        </div>
                        <div id="emailHelp" class="form-text">n: Nó Inicial;&nbsp; (m, k): Aresta final;&nbsp; bool: Valor boleano da Aresta;&nbsp; var: Variável; </div>
                    </div>

                    <!-- PROGRAMA P -->
                    <div class="form-group col-sm-6">
                        <label for="message" class="mt-3">SubCaminho de teste do Programa P</label>
                        <div class="row">
                            <input type="text" class="form-control m-2 col" id="exampleFormControlInput1"
                                placeholder="1, 2, 3, 4, 8, 9" name="subcaminho_p"  value="<%= (program.SUBCAMINHO_P)? program.SUBCAMINHO_P : null%>">
                            <input type="text" class="form-control m-2 col" id="exampleFormControlInput1"
                                placeholder="(n, (m, k), bool, var)" name="subcaminho_p_not"  value="<%= (program.SUBCAMINHO_P_NOT)? program.SUBCAMINHO_P_NOT : null%>">
                        </div>
                        <div id="emailHelp" class="form-text">n: Nó Inicial;&nbsp; (m, k): Aresta final;&nbsp; bool: Valor boleano da Aresta;&nbsp; var: Variável; </div>
                    </div>
                </section>

                <!-- BOTÕES VOLTAR~PROXIMO -->
                <section class="d-flex justify-content-between p-3">
                    <a href="/conf" type="submit" class="btn-lg btn-warning">Página Inicial</a>
                    <button type="submit" class="btn-lg btn-success">Próximo</a>
                </section>
                
            </form>
        </section>
    </section>
</body>


<%- include('./include/footer') %>
