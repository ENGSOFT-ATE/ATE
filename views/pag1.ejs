                <!-- TEXTAREAS DOS PROGRAMAS O E P -->
                <section class="row">

                    <!-- PROGRAMA O -->
                    <div class="form-group col-sm-6">
                        <label for="message">Programa O</label>
                        <textarea class="form-control" id="message" rows="10" name="prog_o" placeholder="Inserir código">
int buscaBin (int valor, int tam, int v[]) {
    int esq = 0, mid, dir = tam-1;
    while (esq <= dir) {
        mid = (esq + dir)/2;
        if (v[mid] == valor)
            return mid;
        if (v[mid] < valor)
            esq = mid + 1;
        else
            dir = mid - 1;
    }
    return -1
}
                        </textarea>
                    </div>

                    <!-- PROGRAMA P -->
                    <div class="form-group col-sm-6">
                        <label for="message">Programa P</label>
                        <textarea class="form-control" id="message" name="prog_p" rows="10" placeholder="Inserir código">
int buscaBin (int valor, int tam, int v[]) {
    int esq = 0, mid, dir = tam-1;
    while (esq < dir) {
        mid = (esq + dir)/2;
        if (v[mid] == valor)
            return mid;
        if (v[mid] < valor)
            esq = mid + 1;
        else
            dir = mid - 1;
    }
    return -1
}
                        </textarea>
                    </div>
                </section>

